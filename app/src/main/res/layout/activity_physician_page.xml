<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="152dp"
            android:background="@color/light_green"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="50dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vatt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif-black"
                android:text="VATT:"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/vatt_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vatt_name"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif-black"
                android:text="TextView"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/pitt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vatt_value"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif-black"
                android:text="PITT:"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/pitt_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pitt_name"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif-black"
                android:text="TextView"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/kapha_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pitt_value"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif-black"
                android:text="KAPHA:"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/kapha_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kapha_name"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="sans-serif-black"
                android:text="TextValue"
                android:textSize="36dp" />

        </RelativeLayout>



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.566">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/monBtn"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:textSize="35dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="MON"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tueBtn"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:textSize="35dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="TUE"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/wedBtn"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:textSize="35dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="WED"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/thuBtn"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:textSize="35dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="THU"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/friBtn"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:textSize="35dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="FRI"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/satBtn"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:textSize="35dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="SAT"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sunBtn"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:textSize="35dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="SUN"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/diet_Suggestion_Dashboard"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#3330FDB3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/green"
                android:text=" Early Morning: "
                android:textColor="@color/white"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietMorning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Early morning Diet"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/green"
                android:text=" Breakfast: "
                android:textColor="@color/white"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietBreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Breakfast Diet."
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/green"
                android:text=" Lunch: "
                android:textColor="@color/white"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietLunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Lunch Diet."
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/green"
                android:text=" Snacks: "
                android:textColor="@color/white"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietSnacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Snacks Diet."
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/green"
                android:text=" Dinner: "
                android:textColor="@color/white"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietDinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Dinner Diet.\n\n"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>