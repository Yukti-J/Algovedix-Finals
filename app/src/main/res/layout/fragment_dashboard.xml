<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="#B3B1B1"
            android:padding="5dp"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <Button
                android:id="@+id/monBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@color/green"
                android:text="MON"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/tueBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@color/green"
                android:text="TUE"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/wedBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@color/green"
                android:text="WED"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/thuBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@color/green"
                android:text="THU"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/friBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@color/green"
                android:text="FRI"
                android:textAlignment="center"
                android:textStyle="bold" />

                <Button
                    android:id="@+id/satBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="SAT"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/sunBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:text="SUN"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green"
            android:padding="5dp"
            android:text="Dosha Chart"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:background="#3330FDB3"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/vaat_dashboard"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp" />

            <ProgressBar
                android:id="@+id/pitt_dashboard"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp" />

            <ProgressBar
                android:id="@+id/kapha_dashboard"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/diet_Suggestion_Dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="510dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green"
            android:padding="5dp"
            android:text="Your Diet Suggestion"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/diet_Suggestion_Dashboard"
            android:layout_marginTop="10dp"
            android:background="#3330FDB3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="#0B1A8C"
                android:text=" Early Morning: "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietMorning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Early morning Diet"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="#0B1A8C"
                android:text=" Breakfast: "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietBreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Breakfast Diet."
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="#0B1A8C"
                android:text=" Lunch: "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietLunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Lunch Diet."
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="#0B1A8C"
                android:text=" Snacks: "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietSnacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Snacks Diet."
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="#0B1A8C"
                android:text=" Dinner: "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dietDinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Dinner Diet.\n\n"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>

    </ScrollView>

</FrameLayout>